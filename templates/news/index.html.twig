<!-- blog-section start -->
<section class="blog-section section-padding">
    <div class="container">
        <div class="row mt-mb-15">

            {% for i in 0..content|length-1 %}
            <div class="col-lg-4 col-sm-6">
                <div class="post-item">
                    <div class="thumb">
                        <img style="height: 28vh;" src="{{ content[i].img}}" alt="{{ content[i].title}}">
                    </div>
                    <div class="content">
                        <ul class="post-meta">
                            <li><a href="news/{{ content[i].slug}}"><i class="fa fa-calendar"></i>{{ content[i].date|date("d/M/Y") }}</a></li>
                        </ul>
                        <h5 class="post-title"><a href="news/{{ content[i].slug}}">{{ content[i].title }}</a></h5>
                        <p>{{ content[i].text|slice(0,95) }}...</p>
                    </div>
                </div>
            </div><!-- post-item end -->

            {% endfor %}
        </div>
        <div class="row">
            <div class="col-lg-12">
                <nav class="d-pagination" aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">

                        {% if page == 1 %}
                        <li class="page-item disabled  ">
                            <a class="page-link" href="news-{{ page-1 }}"><</a></li>

                        {% else %}

                            <li class="page-item   ">
                                <a class="page-link" href="news-{{ page-1 }}"><</a></li>
                            <li class="page-item">
                                <a class="page-link" href="news-{{ page-1 }}">{{ page - 1 }}</a></li>

                        {% endif %}


                        <li class="page-item active"><a class="page-link" >{{ page }}</a></li>


                        {% if page == last_page %}

                        <li class="page-item disabled"><a class="page-link" href="news-{{ page+1 }}">></a></li>

                        {% else %}

                        <li class="page-item "><a href="news-{{ page + 1 }}" class="page-link" >{{ page + 1 }}</a></li>
                            <li class="page-item "><a class="page-link" href="news-{{ page + 1 }}">></a></li>

                        {% endif %}



                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- blog-section end -->
