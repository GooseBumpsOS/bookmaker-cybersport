<section class="blog-details-section section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="blog-details-wrapper">
                    <div class="blog-details-thumb">
                        <img src="{{ content.img }}" alt="image">
                    </div>
                    <div class="blog-details-content">
                        <ul class="post-meta">
                            <li><a href="blog-details.html#"><i class="fa fa-user"></i>{{ content.date|date("d/M/Y") }}</a></li>
                        </ul>
                        <h2 class="blog-details-title">{{ content.title }}</h2>
                       {{ content.text|nl2br }}
                    </div>
