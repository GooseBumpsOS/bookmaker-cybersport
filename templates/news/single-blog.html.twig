                        <h4 class="widget-title">Вам может быть интересно</h4>
                        {% for i in 0..random_content|length-1 %}
                        <ul class="small-post-list">
                            <li>
                                <div class="small-post-item">
                                    <div class="small-post-thumb">
                                        <img src="{{ random_content[i].img }}" alt="{{ seo.alt }}">
                                    </div>
                                    <div class="small-post-content">
