{#                        </div>#}
{#                    </div>#}
                </div><!-- blog-details-wrapper end -->
                <div class="comment-area">
                    <h3 class="title">Кол-во комментариев: {{ comment|length }}</h3>
                    <ul class="comment-list">
                        {% if comment|length >= 1  %}
                        {% for i in 0..comment|length-1 %}
                        <li>


                            <div class="single-comment-wrap">
                                <div class="thumb">
                                    <img src="{{ asset('assets/images/blog/rp1.svg') }}" alt="comment-thumb">
                                </div>
                                <div class="content">
                                    <h6 class="name">{{ comment[i].userName }}</h6>
                                    <span class="reply-time">{{  (date().timestamp - comment[i].time ) // 3600}} час(а) назад</span>
{#                                    <a href="" class="reply"><i class="fa fa-reply"></i></a>#}
                                    <p>{{ comment[i].comment }}</p>
                                </div>
                            </div>
                        </li>
                        {% endfor %}
                        {% endif %}

                    </ul>
                </div><!-- comment-area end -->
                <div class="comment-form-wrap">
                    <h3 class="title">Оставить отзыв</h3>
                    <form class="cmn-form comment-form" action="" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="frm-group">
                                    <input type="text" name="name" id="name" placeholder="Имя*" required>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="frm-group">
                                    <textarea name="msg" id="message" placeholder="Ваше сообщение" required></textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="frm-group">
                                    <button type="submit" class="submit-btn">Ответить</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="widget widget-search">
                        <form class="widget-search-form">
                            <input type="search" name="search" id="widget-search" placeholder="Keyword">
                            <button class="widget-search-btn"><i class="fa fa-search"></i></button>
                        </form>
                    </div><!-- widget end -->
                    <div class="widget widget-categories">
