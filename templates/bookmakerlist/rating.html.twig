<!-- banner-section start -->
<section class="breadcum-section">
    <div class="breadcum-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcum-content text-center">
                        <h3 class="title">Рейтинг букмекеров</h3>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Домой</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('bookmakerlist') }}">Страница букмекра</a></li>
                            <li class="breadcrumb-item active">{{ content.name }}</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- banner-section end -->

<!-- blog-details-section start -->
<section class="blog-details-section section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="blog-details-wrapper">
                    <div class="blog-details-thumb">
                        <a href="{{ content.link }}"><img class="img-bookmaker" src="{{ asset(content.img )}}" alt="{{ seo.alt }}"></a>
                    </div>
                    <div class="blog-details-content">

                        <a href="{{ content.link }}"><h2 class="blog-details-title">{{ content.name }}</h2></a> <br><br>

                        <p>{{ content.info|nl2br }}</p>
                    </div>

                    <div class="col-md-12 text-center">
                    <button type="button"  class="bookmakerButton btn btn-danger"><a href="{{ content.link }}">К букмекеру</a></button>
                        <button type="button" class="bookmakerButton btn btn-danger"><a href="{{ path('bonus') }}">Бонусы</a></button>
                    </div>

                </div><!-- blog-details-wrapper end -->
                <div class="comment-area">
                    <h3 class="title">Кол-во отзывов: {{ rating|length }} | Средняя оценка букмекера: {{ avg }}</h3>
                    <ul class="comment-list">
                    {% if rating|length >= 1  %}
                        {% for i in 0..rating|length-1 %}
                            <li>




                                <div class="single-comment-wrap">
                                    <div class="thumb">
                                        <img src="{{ asset('assets/images/blog/rp1.svg') }}" alt="comment-thumb">
                                    </div>
                                    <div class="content">
                                        <h6 class="name">{{ rating[i].userName }}</h6>
                                        {% for star in 1..rating[i].mark%}
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                            {% endfor %}

                                        {#                                    <a href="" class="reply"><i class="fa fa-reply"></i></a>#}
                                        <p>{{ rating[i].comment }}</p>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    {% endif %}



                    </ul>
                </div><!-- comment-area end -->
                <div class="comment-form-wrap">
                    <h3 class="title">Оставить отзыв</h3>
                    <form class="cmn-form comment-form" action="" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="frm-group">
                                    <input type="text" name="name" id="name" placeholder="Имя*" required>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="frm-group">

                                    <div class="star-rating">
                                        <div class="star-rating__wrap">
                                            <input class="star-rating__input" id="star-rating-5" type="radio" name="rating" value="5">
                                            <label class="star-rating__ico fa fa-star-o fa-lg" for="star-rating-5" title="5 out of 5 stars"></label>
                                            <input class="star-rating__input" id="star-rating-4" type="radio" name="rating" value="4">
                                            <label class="star-rating__ico fa fa-star-o fa-lg" for="star-rating-4" title="4 out of 5 stars"></label>
                                            <input class="star-rating__input" id="star-rating-3" type="radio" name="rating" value="3">
                                            <label class="star-rating__ico fa fa-star-o fa-lg" for="star-rating-3" title="3 out of 5 stars"></label>
                                            <input class="star-rating__input" id="star-rating-2" type="radio" name="rating" value="2">
                                            <label class="star-rating__ico fa fa-star-o fa-lg" for="star-rating-2" title="2 out of 5 stars"></label>
                                            <input class="star-rating__input" id="star-rating-1" type="radio" name="rating" value="1">
                                            <label class="star-rating__ico fa fa-star-o fa-lg" for="star-rating-1" title="1 out of 5 stars"></label>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="frm-group">
                                    <textarea name="msg" id="message" placeholder="Ваше сообщение" required></textarea>
                                </div>
                            </div>


                            <br>

                            <div class="col-md-12">
                                <div class="frm-group">
                                    <button type="submit" class="submit-btn">Оставить отзыв</button>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="widget widget-search">
                        <form class="widget-search-form">
                            <input type="search" name="search" id="widget-search" placeholder="Поиск...">
                            <button class="widget-search-btn"><i class="fa fa-search"></i></button>
                        </form>
                    </div><!-- widget end -->
                    <div class="widget widget-categories">
                        <h4 class="widget-title">Игры</h4>
                        <ul>
                            {% for u in 0..games|length-1 %}
                            <li><a href="javascript:;">{{ games[u] }}</a></li>
                            {% endfor %}
                        </ul>






                        {#                        random posts#}
                    </div><!-- widget end -->




                </div>
            </div>
        </div>
    </div>
</section>
